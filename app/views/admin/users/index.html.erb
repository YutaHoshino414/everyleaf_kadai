<h1>ユーザー管理画面</h1><hr>
<%= link_to 'ユーザー登録', new_admin_user_path, class: "btn btn-info" %> <br><br>
<table class="table">
  <thead>
    <tr>
      <th>ユーザーid</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>ユーザー登録日</th>
      <th>タスク登録数</th>
      <th>管理者</th>
      <th>　</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
      <td><%= user.tasks.count %>件</td>
      <td><%= user.admin %></td>
      <td>　</td>
      <td><%= link_to '詳細', admin_user_path(user.id), class: "btn btn-outline-primary" %></td>
      <td><%= link_to '編集', edit_admin_user_path(user.id), class: "btn btn-outline-success"  %></td>
      <td><%= link_to '削除', admin_user_path(user.id), method: :delete,
          data: { confirm: '本当に削除していいですか？' }, class: "btn btn-outline-danger", id: "confirm_delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagenate"><%= paginate @users %></div>