<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th>タスク</th>
      <th>タスク詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>
<%= link_to '新規投稿', new_task_path %>