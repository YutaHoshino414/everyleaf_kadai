<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先度高い順でソート", tasks_path(sort_priority: "true") %><br><hr>
<table>
  <thead>
    <tr>
      <th>タスク</th>
      <th>タスク詳細</th>
      <th>終了期限</th>
      <th>登録日時</th>
      <th>ステータス</th>
      <th>優先度</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td>　　<%= task.deadline %>　　</td>
        <td><%= task.created_at.strftime('%Y-%m-%d %T') %></td>
        <td>　　<%= task.status %>　　</td>
        <td>　　<%= task.priority %>　　</td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task.id) %></td>
        <td><%= link_to '削除', task_path(task.id), method: :delete, data: {confirm: "本当に削除していいですか？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>
<%= link_to '新規登録', new_task_path %>