<h2>タスク新規登録画面</h2>
<% if @task.errors.any? %>
    <div style="color:red;">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<%= form_with(model: @task, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div>
    <%= form.label :deadline %>
    <%= form.text_field :deadline %>
  </div>
  <br>
    <%= form.submit '登録する' %>
<% end %>